<Window x:Class="TestTaskEditImageWpf.View.HomePage.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskEditImageWpf.ViewModel.HomePage"
        mc:Ignorable="d"
        Title="Розрахунок часу обробки зображень" Height="500" Width="900">
    <Window.DataContext>
        <local:HomeViewModel></local:HomeViewModel>
    </Window.DataContext>
    <Grid Background="#F5F7FA"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
 
        <DataGrid x:Name="dataGrid" Grid.Row="1"  
              ItemsSource="{Binding People, UpdateSourceTrigger=PropertyChanged}" 
              SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
              AutoGenerateColumns="False" 
              Margin="10,10,10,10"
              Background="White" 
              BorderBrush="#D9D9D9" BorderThickness="1"
              RowBackground="#FFFFFF" AlternatingRowBackground="#F0F2F5"
              RowHeight="30" FontSize="14"
              CanUserAddRows="False" CanUserDeleteRows="False"
              HeadersVisibility="Column"
              GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ім'я" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Час на задачу" Binding="{Binding TimeWorkForOneImage}" Width="150"/>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="30"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Margin" Value="0,2,0,2"/>
                    <Setter Property="BorderBrush" Value="#D9D9D9"/>
                    <Setter Property="BorderThickness" Value="1"/> 
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <DataGrid x:Name="dataGrid1" Grid.Row="2" 
              ItemsSource="{Binding PeopleComplateTasks}"
              AutoGenerateColumns="False"
              ColumnWidth="*"
              Margin="10"
              Background="White" 
              BorderBrush="#D9D9D9" BorderThickness="1"
              RowBackground="#FFFFFF" AlternatingRowBackground="#F0F2F5"
              RowHeight="30" FontSize="14"
              CanUserAddRows="False" CanUserDeleteRows="False"
              HeadersVisibility="Column" 
              GridLinesVisibility="None">

            <DataGrid.Columns> 
                <DataGridTextColumn Header="Ім'я" Binding="{Binding Name}" Width="150" />
                <DataGridTextColumn Header="Кількість оброблених зображеннь" Binding="{Binding CompleteImage}" Width="245"/>
                <DataGridTextColumn Header="Час обробки зображень" Binding="{Binding TotalTimeWorkForImages}" Width="180"/>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="30"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
 
        <Grid Grid.Column="1" Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                <Label Content="Ім'я:" FontWeight="Bold"/>
                <TextBox Text="{Binding Name}" Width="150" Padding="5"
                     HorizontalAlignment="Left" 
                     BorderBrush="#C0C0C0" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
                <Label Content="Час виконання одного зображення:" FontWeight="Bold"/>
                <TextBox Text="{Binding TimeWorkForOneImage}" Width="150" Padding="5" 
                     HorizontalAlignment="Left"
                     BorderBrush="#C0C0C0" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left"  >
                <Button Content="➕ Додати" Command="{Binding AddPersonCommand}"
                        Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    Background="#4CAF50" Foreground="White" Padding="6"
                    BorderThickness="0" Width="120" />
                <Button Content="🗑 Видалити" Command="{Binding DeletePersonCommand}"
                    HorizontalAlignment="Right"
                         Margin="10,0,0,0"
                    Background="#E53935" Foreground="White" Padding="5,2"
                    BorderThickness="0"  Width="120" />
            </StackPanel>
        </Grid>
 
        <Grid Grid.Column="1" Grid.Row="2" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                <Label Content="Загальна кількість зображень для обробки:" FontWeight="Bold"/>
                <TextBox Text="{Binding TotalImage}" Width="150" Padding="5" 
                     HorizontalAlignment="Left"
                     BorderBrush="#C0C0C0" BorderThickness="1"/>
            </StackPanel>

            <Button Grid.Row="1" Content="▶ Почати" Command="{Binding StartWorkingOnImageCommand}"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Width="120"
                Background="#2196F3" Foreground="White" Padding="6"
                BorderThickness="0"/>
        </Grid>
 
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,10,0">
            <Label Content="Кількість готових зображень:"/>
            <Label Content="{Binding TotalCompateImage}" FontWeight="Bold"/>
            <Label Content="Час виконання:"/>
            <Label Content="{Binding TotalTimeForComplateImages}" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
